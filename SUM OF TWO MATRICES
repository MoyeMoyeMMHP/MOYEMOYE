#include<stdio.h>
int main()
{
	int n,m;
	printf("Enter the size fo array 1: ");
	scanf("%d",&n);
	printf("Enter the siize of array 2: ");
	scanf("%d",&m);
	int a[n],b[m],s1=0;
	printf("Enter the elements of array 1: ");
	for(int i=0;i<n;i++)
	{
		scanf("%d",&a[i]);
	}
	printf("Enter the elements of Array 2: ");
	for(int i=0;i<m;i++)
	{
		scanf("%d",&b[i]);
	}
	printf("First Array: \n");
	for(int i=0;i<n;i++)
	{
		printf("%d ",a[i]);
	}
	printf("\nSecond Array : \n");
	for(int i=0;i<m;i++)
	{
		printf("%d ",b[i]);
	}
	for(int i=0;i<n;i++)
	{
		s1+=a[i];
	}
	for(int i=0;i<m;i++)
	{
		s1+=b[i];
	}
	printf("\nThe sum of the two matrices elements : %d",s1);
}
